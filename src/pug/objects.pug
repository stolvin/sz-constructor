          ul.objectcard__roomslist.roomslist
            li.roomslist__item
              .roomslist__title 1-комнатные
              .roomslist__value 54
            li.roomslist__item
              .roomslist__title 2-комнатные
              .roomslist__value 48
            li.roomslist__item
              .roomslist__title 3-комнатные
              .roomslist__value 14
            li.roomslist__item
              .roomslist__title Машиноместа
              .roomslist__value 50
